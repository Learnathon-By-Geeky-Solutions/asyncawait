

@model ProductCreateViewModel

@{
    var products = Model.Products;
    int slNo = 0;
}

<h1>Product Create</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Enter Product Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="price">Unit Price</label>
        <input type="number" class="form-control" asp-for="Price" placeholder="Unit Price">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" asp-for="Description" placeholder="Product Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<h1>Product List</h1>
<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Unit Price</th>
            <th scope="col">Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in products)
        {
            <tr>
                <td>@(++slNo)</td>
                <td>@product.Name</td>
                <td>@product.UnitPrice</td>
                <td>@product.Description</td>
            </tr>
        }
    </tbody>
</table>
