
@model CustomerCreateViewModel

@{
    var customers = Model.Customers;
    int slNo = 0; 
}

<h1>Customer Create</h1>



<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" asp-for="Name"  placeholder="Enter Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="phoneNo">Phone No</label>
        <input type="text" class="form-control" asp-for="PhoneNo" placeholder="Phone No">
        <span asp-validation-for="PhoneNo" class="text-danger"></span>
    </div>
    <div class="form-group">
    <label for="address">Address</label>
    <input type="text" class="form-control" asp-for="Address" placeholder="Address">
     <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<h1>Customer List</h1>
<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Phone</th>
            <th scope="col">Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in customers)
        {
            <tr>
                <td>@(++slNo)</td>
                <td>@customer.Name</td>
                <td>@customer.PhoneNo</td>
                <td>@customer.Address</td>
            </tr>
        }
    </tbody>
</table>

